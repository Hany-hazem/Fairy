# Self-Improving AI Assistant Configuration
# Copy this file to .env and adjust the values as needed

# LM Studio Configuration
LLM_STUDIO_URL=http://localhost:1234
LM_STUDIO_MODEL=gpt-oss-20b
LM_STUDIO_TEMPERATURE=0.7
LM_STUDIO_MAX_TOKENS=2048
LM_STUDIO_TIMEOUT=30
LM_STUDIO_RETRY_ATTEMPTS=3

# Redis Configuration (optional - will use in-memory fallback if not available)
REDIS_URL=redis://localhost:6379

# Application Settings
LOG_LEVEL=INFO
USE_REAL_LLM=true
TESTING=false

# Self-Improvement Settings
SAFETY_LEVEL=conservative
AUTO_APPLY_THRESHOLD=8.0
MAX_CONCURRENT_IMPROVEMENTS=3

# Performance Monitoring
PERFORMANCE_CHECK_INTERVAL=3600

# Vector Database (optional - will use in-memory if not available)
VECTOR_DB_PATH=./vector_db

# Model Backends Configuration (JSON format)
MODEL_BACKENDS={"gpt-oss-20b": "studio"}